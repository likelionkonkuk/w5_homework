<%= form_for @post, html: { multipart: true }  do |f| %>
  <div class="row">
  <div class="col-md-6">
    <p>개인 정보</p>
      <%= f.text_field :name, class: 'form', placeholder: '이름'%>
      <%= f.text_field :phone, class: 'form', placeholder: 'phone' %>
      <%= f.text_field :major, class: 'form',placeholder: '전공' %>
      <%= f.text_field :studentid, class: 'form', placeholder: '학번' %>
  </div>
  <div class="col-md-6">
    <p>미션 정보</p>
      <div class="row">
        <div class="col-md-4">
          <%= f.text_field :time, class: 'form', placeholder: '시각' %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :place, class: 'form', placeholder: '수행장소' %>
        </div>
        <div class="col-md-4">
         <%= f.text_field :price, class: 'form', placeholder: '비용' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.text_area :content, class: 'form textarea', placeholder:'미션내용' %>
      </div>
  </div>
  </div>

  <div class="col-md-12">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  </div>
  <div class="actions">
    <%= f.button :submit, class: 'form-btn semibold' %>
    <% end %>
  </div>
